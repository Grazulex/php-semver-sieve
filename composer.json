{
    "name": "grazulex/php-semver-sieve",
    "description": "A pure PHP package for checking if a version string is included in one or more version ranges. Supports SemVer 2.0.0 and multiple version dialects (Composer, npm, PyPI, etc.)",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "semver",
        "version",
        "range",
        "composer",
        "npm",
        "semantic-versioning",
        "version-constraint",
        "dependency-resolution"
    ],
    "authors": [
        {
            "name": "Jean-Marc Strauven",
            "email": "grazulex@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "friendsofphp/php-cs-fixer": "^3.59",
        "infection/infection": "^0.28",
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Grazulex\\SemverSieve\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grazulex\\SemverSieve\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "ci": [
            "@composer normalize --dry-run",
            "@quality",
            "@infection"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "infection": "infection",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "rector": "rector",
        "rector-dry": "rector --dry-run",
        "stan": "phpstan analyse",
        "test": "pest",
        "test-coverage": "pest --coverage"
    }
}